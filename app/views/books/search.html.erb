<h1> Search<h1>
    <%= search_form_for @search do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title_cont, class: 'form-control' %>
    <%= f.label :author %>
    <%= f.text_field :author_cont, class: 'form-control' %>
    <%= f.label :description %>
    <%= f.text_field :description_cont, class: 'form-control' %>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>